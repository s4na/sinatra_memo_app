<section>
    <div class="row text-center justify-content-center">
        <form action="/<%= @id %>" method="POST">
            <div class="form-group">
                <h2 for="formGroupExampleInput">タイトル</h2>
                <input type="text" name="title" class="form-control" id="formGroupExampleInput" value="<%= @title %>">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">内容</label>
                <textarea name="contents" class="form-control" id="formGroupExampleInput2"><%= @contents %></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-dark">
            </div>
            <input type="hidden" name="_method" value="PATCH">
        </form>
    </div>
    <form action="/" method="GET">
        <dir class="col text-center">
            <input type="submit" value="TOPに戻る" class="btn btn-dark">
        </dir>
    </form>
</section>
